{
  "name": "Feedly Filter",
  "version": "1.0",
  "manifest_version": 2,
  "description": "Filter articles in Feedly by likes.",
  "permissions": [
    "https://feedly.com/",
    "https://*.feedly.com/"
  ],
/*
  "browser_action": {
    "default_icon": "icon-128.png",
    "default_title": "Filter by likes",
    "default_popup": "popup.html"
  },
*/
/*
  "background": {
    "scripts": ["feedly.js", "filter.js"]
  },
*/
  "content_scripts": [
    {
      "matches": ["https://feedly.com/*", "https://*.feedly.com/*"],
      "css": ["filter.css"],
      "js": [
        "util.js",
        "throttle.js",
        "eventtargetimpl.js",
        "model.js",
        "feedly.js",
        "filter.js",
        "main.js"
      ],
      "run_at": "document_idle"
    }
  ],
  "icons": {
    "16": "icon-16.png",
    "48": "icon-48.png",
    "128": "icon-128.png"
  }
}
